{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@client": ["src/client"],
      "@client/*": ["src/client/*"],

      "@server": ["src/server"],
      "@server/*": ["src/server/*"],

      "@tasks": ["src/tasks"],
      "@tasks/*": ["src/tasks/*"],

      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"],

      "@assets": ["assets"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": [
    "**/*.test.ts",
    "node_modules"
  ]
}
