{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@client": ["src/client"],
      "@client/*": ["src/client/*"],

      "@server": ["src/server"],
      "@server/*": ["src/server/*"],

      "@tasks": ["src/tasks"],
      "@tasks/*": ["src/tasks/*"],

      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"],

      "@assets": ["assets"],
      "@assets/*": ["assets/*"],

      "@scrapper": ["./src/server/modules/importer/modules/scrapper"],
      "@scrapper/*": ["./src/server/modules/importer/modules/scrapper/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
