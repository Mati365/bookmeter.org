{
  "apps" : [
    {
      "name" : "bookmeter.org",
      "script" : "dist/server.js"
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "web",
      "host" : ["192.168.1.105"],
      "ref"  : "origin/main",
      "repo" : "git@github.com:Mati365/bookmeter.org.git",
      "path" : "/var/www/bookmeter.org",
      "post-deploy" : "yarn install --production=false; yarn run build:production",
      "env": {
        "NODE_ENV": "production",
        "APP_ENV": "production",
        "APP_PORT": 3000,
        "APP_INSTANCES": 1,
        "APP_LISTEN_ADDRESS": "0.0.0.0",
        "HTTPS_KEY_PATH": "~/.ssl/bookmeter.org.key",
        "HTTPS_CERT_PATH": "~/.ssl/bookmeter.org.crt"
      }
     }
  }
}
